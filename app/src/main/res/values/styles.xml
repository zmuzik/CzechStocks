<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="actionBarSize">36dip</item>
        <item name="android:actionBarSize">36dip</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="timeFrameButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="fabPlus">
        <item name="floatingActionButtonColor">@color/green</item>
        <item name="floatingActionButtonSize">mini</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_action_new</item>
    </style>

    <style name="greenNumber">
        <item name="android:textColor">#00DD00</item>
    </style>

    <style name="redNumber">
        <item name="android:textColor">#DD0000</item>
    </style>
</resources>