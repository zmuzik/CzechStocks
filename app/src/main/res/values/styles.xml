<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="greenNumber">
        <item name="android:textColor">#00DD00</item>
    </style>

    <style name="redNumber">
        <item name="android:textColor">#DD0000</item>
    </style>

    <style name="timeFrameButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="fab">
        <item name="floatingActionButtonColor">@color/green</item>
        <item name="floatingActionButtonSize">mini</item>
    </style>


</resources>