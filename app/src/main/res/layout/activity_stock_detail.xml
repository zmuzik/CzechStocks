<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="zmuzik.czechstocks.activities.StockDetailActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <fragment
        android:id="@+id/stockInfoFragment"
        android:name="zmuzik.czechstocks.fragments.StockInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <fragment
            android:id="@+id/stockDividendsFragment"
            android:name="zmuzik.czechstocks.fragments.StockDividendsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"/>

        <fragment
            android:id="@+id/stockGraphFragment"
            android:name="zmuzik.czechstocks.fragments.StockGraphFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
