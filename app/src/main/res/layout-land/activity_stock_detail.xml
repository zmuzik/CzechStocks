<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="zmuzik.czechstocks.activities.StockDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="280sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/stockInfoFragment"
                android:name="zmuzik.czechstocks.fragments.StockInfoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <fragment
                android:id="@+id/stockDividendsFragment"
                android:name="zmuzik.czechstocks.fragments.StockDividendsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <fragment
            android:id="@+id/stockGraphFragment"
            android:name="zmuzik.czechstocks.fragments.StockGraphFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
</LinearLayout>